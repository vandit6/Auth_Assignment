@model Auth.Models.Users
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<head>
    <style>

        .form-control {
            width: 20%;
            margin: 10px 0;
        }


        .form-check-input {
            margin-top: 10px;
        }


        .btn-primary {
            margin-top: 10px;
        }
    </style>
</head>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Email"> Email address</label>
        <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="Email">

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" asp-for="Password"> Password</label>
        <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="Password" name="password">
    </div>

    <button type="submit" class="btn btn-primary"> Submit</button>
</form>

